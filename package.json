{
  "name": "heticiens.news",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "start": "next",
    "build": "next build",
    "serve": "next start",
    "deploy": "serverless",
    "lint": "xo",
    "test": "echo 'no tests yet!'",
    "commit": "npm run lint && commit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run build"
    }
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "extends": "xo-react",
    "ignores": [
      "local/**",
      "components/head.js"
    ],
    "rules": {
      "react/state-in-constructor": [
        1,
        "always"
      ],
      "new-cap": 1,
      "import/no-unassigned-import": 0,
      "react/react-in-jsx-scope": 0,
      "unicorn/prevent-abbreviations": 0,
      "unicorn/catch-error-name": 0,
      "unicorn/prefer-set-has": 0,
      "react/prop-types": 0,
      "react/button-has-type": 0,
      "unicorn/no-abusive-eslint-disable": 0,
      "no-await-in-loop": 0,
      "unicorn/no-reduce": 0,
      "unicorn/prefer-ternary": 0,
      "unicorn/prefer-optional-catch-binding": 0,
      "import/no-anonymous-default-export": 0,
      "@typescript-eslint/prefer-readonly-parameter-types": 0,
      "@typescript-eslint/no-implicit-any-catch": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hetic-newsroom/heticiens.news.git"
  },
  "author": "Gabriel SAILLARD <gabriel@saillard.dev> (https://gaby.dev)",
  "contributors": [
    "Arnaud MEGE <arnaud.mege@hetic.net>",
    "Joshua TABAKHOFF <joshua.tabakhoff@hetic.net>"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/hetic-newsroom/heticiens.news/issues"
  },
  "homepage": "https://github.com/hetic-newsroom/heticiens.news#readme",
  "dependencies": {
    "@prismicio/client": "^4.0.0",
    "aws-sdk": "^2.781.0",
    "classnames": "^2.2.6",
    "dompurify": "^2.2.0",
    "isomorphic-unfetch": "^3.1.0",
    "jsdom": "^16.4.0",
    "nanoid": "^3.1.16",
    "next": "^10.0.5",
    "prismic-reactjs": "^1.3.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "reading-time": "^1.2.0",
    "scrypt-js": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "@types/react": "^16.9.55",
    "eslint-config-xo": "^0.33.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "serverless": "^1.83.0",
    "serverless-next.js": "^1.14.0",
    "xo": "^0.34.1"
  }
}
